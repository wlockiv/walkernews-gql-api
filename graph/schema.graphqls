type Link {
    id: ID!
    title: String!
    address: String!
    user: User!
}

type User {
    id: ID!
    username: String!
}

type Query {
    links: [Link!]!
}

input NewLink {
    title: String!
    address: String!
}

input RefreshToken {
    token: String!
}

input NewUser {
    username: String!
    password: String!
}

input Login {
    username: String!
    password: String!
}

type Mutation {
    createLink(input: NewLink!): Link!
    createUser(input: NewUser!): User!
    login(input: Login!): String!
}